{
  "name": "@statickit/html",
  "version": "1.0.0",
  "description": "The HTML client library for StaticKit",
  "homepage": "https://statickit.com/docs/html",
  "keywords": [
    "statickit"
  ],
  "bugs": {
    "url": "https://github.com/unstacked/statickit-html/issues"
  },
  "author": "Derrick Reimer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unstacked/statickit-html.git"
  },
  "module": "dist/statickit.esm.js",
  "main": "dist/statickit.cjs.js",
  "files": [
    "dist/statickit.esm.js",
    "dist/statickit.cjs.js",
    "public/statickit.js",
    "public/statickit.min.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "release": "np",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "7.6.0",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "np": "5.1.1",
    "object-assign": "4.1.1",
    "prettier": "1.18.2",
    "rollup": "1.17.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.1",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.1"
  },
  "dependencies": {
    "@statickit/core": "^1.3.1",
    "hyperscript": "^2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && git add public/"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "np": {
    "yarn": false
  }
}
